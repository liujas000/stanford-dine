<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">

<link href="assets/bootstrap.css" rel="stylesheet">

<HTML>
	<HEAD>
		<TITLE>Stanford Dinner</TITLE>
	</HEAD>
 
	<BODY>
		<h1>Dine<h1>
		<h2>Which Dining Hall is the best today?</h2>
		<div class="row">
			<% @halls.each do |hall| %>
				<div class="col-sm-4">
					<div class"thumbnail">
						<img src="<%= hall.img %>">
						<div class="caption">
							<h3><%= hall.name %></h3>
							<p><h4>Score: <% hall.score %></h4></p>
							<p>
								<a href="#" class ="btn btn-success" role="button">+</a>
								<a href="#" class ="btn btn-danger" role="button">-</a>
							</p>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</BODY>
</HTML>