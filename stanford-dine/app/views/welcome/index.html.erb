<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">

<link href="assets/bootstrap.css" rel="stylesheet">
<script src="assets/jquery-1.11.2.min.js"></script>

<HTML>
	<HEAD>
		<TITLE>Stanford Dinner</TITLE>
	</HEAD>
 
	<BODY>
		<h1>Dine<h1>
		<h2>Which Dining Hall is the best today?</h2>
		<button type="button" id="myStateButton" data-complete-text="finished!" class="btn btn-primary" autocomplete="off">
			testing...
		</button>

		<script>
		  $('#myStateButton').on('click', function () {
		    $(this).button('complete'); // button text will be "finished!"
  			alert("BUTTON WAS PRESSED");
  			console.log("button pressed");
		  })
		</script>

		<div class="row">
			<% @halls.each do |hall| %>
				<div class="col-sm-4">
					<div class"thumbnail">
						<img src="<%= hall.img %>">
						<div class="caption" id="<% hall.id %>">
							<h3><%= hall.name %></h3>
							<p><h4><%= hall.score %></h4></p>
							<p>
								<button type="button" class="btn btn-success" id="plus-button" role="button">+</button>
								<button type="button" class="btn btn-danger" id="minus-button" role="button">-</button>
							</p>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</BODY>
</HTML>